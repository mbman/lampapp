<VirtualHost *:80>
    ServerAdmin admin@localhost
    ServerName <%= @name %>.dev
    ServerAlias www.<%= @name %>.dev *.<%= @name %>.dev  *.<%= @name %>.*

    DocumentRoot <%= @path %>
    SetEnv APPLICATION_ENV "development"
    <Directory />
        Options FollowSymLinks
        AllowOverride None
    </Directory>
    <Directory <%= @path %>>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride All
        Require all granted
    </Directory>
    <Location />
      Order allow,deny
      Allow from all
    </Location>


    LogLevel info

    ProxyPassMatch ^/(.*\.php(/.*)?)$ unix:/var/run/php5-fpm.sock|fcgi://localhost<%= @path %>
    DirectoryIndex /index.php index.php

    ErrorLog <%= node['apache']['log_dir'] %>/<%= @name %>-error.log
    CustomLog <%= node['apache']['log_dir'] %>/<%= @name %>-access.log combined

</VirtualHost>
<VirtualHost *:443>
    ServerAdmin admin@localhost
    ServerName <%= @name %>.dev
    ServerAlias www.<%= @name %>.dev *.<%= @name %>.dev  *.<%= @name %>.*

    DocumentRoot <%= @path %>
    SetEnv APPLICATION_ENV "development"
    <Directory />
        Options FollowSymLinks
        AllowOverride None
    </Directory>
    <Directory <%= @path %>>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride All
        Require all granted
    </Directory>
    <Location />
      Order allow,deny
      Allow from all
    </Location>

    LogLevel info

    ErrorLog <%= node['apache']['log_dir'] %>/<%= @name %>-ssl-error.log
    CustomLog <%= node['apache']['log_dir'] %>/<%= @name %>-ssl-access.log combined

    ProxyPassMatch ^/(.*\.php(/.*)?)$ unix:/var/run/php5-fpm.sock|fcgi://localhost<%= @path %>
    DirectoryIndex /index.php index.php

    SSLEngine on
    SSLOptions +StrictRequire
    SSLCertificateFile /home/vagrant/lampapp_ssl.pem
    SSLCertificateKeyFile /home/vagrant/lampapp_ssl.key
</VirtualHost>
